<?xml version="1.0" encoding="utf-8" ?>
<pages:ConferencesListPageBase xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:TekConf.Pages;assembly=TekConf"
             x:Class="TekConf.Pages.ConferencesListPage">


  <StackLayout>
    <Label Text="Conferences" VerticalOptions="Center" HorizontalOptions="Center" />

    <Button Text="Login" Command="{Binding ShowLogin}"></Button>

    <ListView ItemsSource="{Binding Conferences}">
    	<ListView.ItemTemplate>
    		<DataTemplate>
      			<TextCell Text="{Binding Name}" Command="{Binding ShowDetail}" CommandParameter="{Binding Slug}"></TextCell>
    		</DataTemplate>
    	</ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</pages:ConferencesListPageBase>